---
import Main from "../components/Main.astro"
---

<Main>
<form name="adoptionForm" method="POST" data-netlify="true" class="flex flex-col bg-teal-300 max-w-lg mx-auto my-8 p-6 rounded-3xl shadow">
    <h2 class="text-center text-white font-bold text-5xl mb-6">Adoption Application</h2>
    <input type="hidden" name="form-name" value="adoptionForm" />

    <div class="mb-4">
      <label for="applicant-name" class="sr-only">Applicant Name</label>
      <input type="text" name="applicant-name" id="applicant-name" placeholder="Your Full Name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
    </div>

    <div class="mb-4">
      <label for="applicant-email" class="sr-only">Email</label>
      <input type="email" name="applicant-email" id="applicant-email" placeholder="Your Email" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
    </div>

    <div class="mb-4">
      <label for="applicant-address" class="sr-only">Address</label>
      <input type="text" name="applicant-address" id="applicant-address" placeholder="Your Address" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
    </div>

    <div class="mb-4">
      <label for="animal-type" class="sr-only">Animal Type</label>
      <select name="animal-type" id="animal-type" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        <option value="">Select Animal Type</option>
        <option value="dog">Dog</option>
      </select>
    </div>

    <div class="mb-4">
      <label for="reason-for-adoption" class="sr-only">Reason for Adoption</label>
      <textarea name="reason-for-adoption" id="reason-for-adoption" placeholder="Why do you want to adopt an animal?" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
    </div>

    <div class="flex justify-center">
      <button type="submit" class="w-1/2 flex justify-center py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-bold text-white bg-blue-600 hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Submit Application
      </button>
    </div>
</form>
</Main>

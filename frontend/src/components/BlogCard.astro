---
// Define the props that BlogCard will accept
const { title, author, description, pubDate, image, url } = Astro.props;

// Function to format date
function formatDate(dateString:Date) {
  const date = new Date(dateString);
  const options = { year: 'numeric', month: 'long', day: 'numeric' };
  return date.toLocaleDateString('en-US', options);
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  <div class="card min-w-[320px] mt-8 bg-white rounded-3xl outline outline-slate-200 shadow-xl">
    <a href={url} class="flex flex-col h-full">
      <!-- Use the image URL directly, with a fallback to a default image -->
      <img class="rounded-t-3xl object-cover h-48 w-full" src={image?.url || '/default-image.jpeg'} alt={image?.alt || 'Default image'} />
      <div class="p-4 flex flex-col flex-grow">
        <p class="publish-date text-sm text-gray-500 mb-2">{formatDate(pubDate)}</p>
        <h2 class="title text-xl font-semibold mb-2 line-clamp-2">{title}</h2>
        <p class="author text-md text-gray-700 mb-4">{author}</p>
        <p class="description text-gray-600 text-sm flex-grow mb-4 line-clamp-3">{description}</p>
      </div>
    </a>
  </div>
</div>

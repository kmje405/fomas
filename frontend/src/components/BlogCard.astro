---
// Define the props that BlogCard will accept
const { title, author, description, pubDate, image, url } = Astro.props;

// Function to format date
function formatDate(dateString: Date) {
  const date = new Date(dateString);
  const options = { year: "numeric", month: "long", day: "numeric" };
  return date.toLocaleDateString("en-US", options);
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  <div
    class="card min-w-[320px] mt-8 bg-white rounded-3xl outline outline-slate-300 shadow-xl transition-all duration-300 ease-in-out hover:shadow-2xl"
  >
    <a href={url} class="flex flex-col h-full">
      <img
        class="rounded-t-3xl object-cover h-48 w-full"
        src={image?.url || "/default-image.jpeg"}
        alt={image?.alt || "Default image"}
      />
      <div class="p-4 flex flex-col flex-grow">
        <p class="publish-date text-sm text-gray-500 mb-2">
          {formatDate(pubDate)}
        </p>
        <h2 class="title text-2xl font-bold mb-2">{title}</h2>
        <p class="author text-md font-medium text-gray-700 mb-4">{author}</p>
        <div class="prose prose-sm prose-indigo max-w-none flex-grow mb-4">
          <p>{description}</p>
        </div>
        <div class="mt-auto">
          <button
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out"
          >
            Learn More!
          </button>
        </div>
      </div>
    </a>
  </div>
</div>

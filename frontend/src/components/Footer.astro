---
import { mailingAddress, organizationFullName, nonProfitStatus } from '../constants';

const currentYear = new Date().getFullYear();
---

<footer class="bg-blue-900 text-white pt-10 pb-6 px-5 sm:pb-3 sm:pt-8 min-h-48 border-t border-blue-700">
  <div class="max-w-7xl mx-auto flex flex-wrap items-start justify-between">
    <!-- Beginning Section -->
    <div class="w-full sm:w-auto mb-6 sm:mb-0">
      <p class="text-lg mb-4">{mailingAddress}</p>
      <p class="text-md italic">{nonProfitStatus}</p>
    </div>
    <!-- Links Section -->
    <div class="hidden sm:flex flex-wrap justify-end sm:justify-start w-full sm:w-auto text-lg font-semibold">
      {[
        { href: "/dogs", label: "Dogs" },
        { href: "/resources", label: "Resources" },
        { href: "/volunteer", label: "Volunteer" },
        { href: "/blog", label: "Blog" },
        { href: "/donate", label: "Donate" },
        { href: "/about", label: "About" },
      ].map((link) => (
        <a key={link.href} href={link.href} class="hover:text-blue-300 mx-3 mb-2 sm:mb-0">
          {link.label}
        </a>
      ))}
    </div>
  </div>
  <div class="text-center mt-4 sm:mt-6 text-md sm:text-lg font-semibold">
    <p>&copy; {currentYear} All Rights Reserved. {organizationFullName}</p>
  </div>
</footer>

---
const { backgroundImage, headline, buttonText, buttonLink } = Astro.props;
import { Image } from "astro:assets";
const imageUrl = (backgroundImage);
---

<div class="relative min-h-[500px] w-full bg-cover bg-center flex flex-col justify-end items-center p-8 hover:opacity-100" style={`background-image: url('${imageUrl}')`}>
  <h1 class="text-6xl font-bold text-white">{headline}</h1>
  <a href={buttonLink} class="mt-4 bg-blue-700 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded-full">
    {buttonText}
  </a>
</div>
---
const title = Astro.props.title;
const content = Astro.props.content;
import { Image } from "astro:assets";
import OrangeSquiggle from "../images/line-twOrange300.svg";
---
<div class="bg-missionBannerImage bg-cover bg-center min-h-[375px] flex flex-col justify-center items-center text-center p-4">
    <div class="inner bg-white rounded-xl px-4 py-6 max-w-[60%]">
        <h1 class="text-4xl pb-3 md:text-4xl font-bold text-blue-600">{title}</h1>
        <Image class="mx-auto max-w-[250px]" src={OrangeSquiggle} alt="a wavy orange line separating the title from the content." />
        <p class="text-blue-900 max-w-[50%] items-center mx-auto">{content}</p>
    </div>
</div>

---
// Define the component's properties
interface Props {
  title: string;
  description: string;
  image: string;
  buttonText: string;
  buttonLink: string;
  reverse?: boolean; 
}

const { title, description, image, buttonText, buttonLink, reverse = false }: Props = Astro.props;
---

<div class={`grid grid-cols-2 items-center gap-4 p-4 bg-white shadow rounded-lg ${reverse ? 'flex-row-reverse' : ''}`}>
  <!-- Content column, order changes if reverse is true -->
  <div class={`flex flex-col justify-between space-y-4 ${reverse ? 'order-last' : 'order-first'}`}>
    <div>
      <h1 class="text-lg font-semibold">{title}</h1>
      <p class="text-gray-600">{description}</p>
    </div>
    <a href={buttonLink} class="max-w-fit px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors text-sm font-medium">
      {buttonText}
    </a>
  </div>
  <!-- Image column, order changes if reverse is true -->
  <div class={`${reverse ? 'order-first' : 'order-last'}`}>
    <img src={image} alt={title} class="rounded-lg w-full h-auto" />
  </div>
</div>

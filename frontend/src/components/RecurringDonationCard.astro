---
const { amount, paymentLinkUrl, title, description } = Astro.props;
---

<div class="max-w-sm rounded-3xl overflow-hidden shadow-lg bg-white p-6 mx-auto border border-2 m-8">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">
      {description}
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <span class="flex justify-center bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
      ${amount} / month
    </span>
  </div>
  <div class="px-6 pt-4 pb-2 flex justify-center">
    <a
      href={paymentLinkUrl}
      class="bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded-full"
    >
      Donate Now
    </a>
  </div>
</div>

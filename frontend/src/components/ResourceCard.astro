---
// Define props for the component
interface Props {
  cardImage: string;
  title: string;
  tag: string;
  buttonLink: string;
}

const { cardImage, title, tag, buttonLink }: Props = Astro.props;
---

<div class="max-w-md mx-auto md:max-w-none md:flex md:justify-between md:space-x-4">
  <div class="flex flex-col bg-white rounded-lg shadow-md overflow-hidden md:max-w-2xl">
    <div class="flex-shrink-0">
      <img class="h-48 w-full object-cover" src={cardImage} alt={title} />
    </div>
    <div class="p-8">
      <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">{tag}</div>
      <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">{title}</a>
      <p class="mt-2 text-gray-500">
        This is a preview. Click the button below to learn more about this resource.
      </p>
      <a href={buttonLink} class="mt-4 inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
        Learn More
      </a>
    </div>
  </div>
</div>

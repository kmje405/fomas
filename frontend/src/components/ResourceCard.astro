---
// Define props for the component
interface Props {
  cardImage: string;
  title: string;
  tag: string;
  buttonLink: string;
}

const { cardImage, title, tag, buttonLink }: Props = Astro.props;
---

<div class="max-w-md mx-auto md:max-w-none md:flex md:justify-between rounded-3xl p-2 m-4">
    <div class="flex flex-col bg-white rounded-3xl shadow-md overflow-hidden md:max-w-2xl">
      <div class="flex-shrink-0">
        <img class="h-48 w-full object-fit" src={cardImage} alt={title} />
      </div>
      <div class="p-8 flex flex-col justify-between h-full">
        <a href="#" class="text-lg leading-tight font-medium text-blue-600 hover:underline">{title}</a>
        <p class="mt-2 text-gray-500">
          <!-- Description or content can be placed here if needed -->
        </p>
        <div class="flex items-center justify-between mt-4">
          <div class="uppercase tracking-wide text-sm text-blue-500 font-semibold border border-gray-200 rounded-full bg-gray-300 p-2">{tag}</div>
          <a href={buttonLink} class="inline-flex items-center rounded-full justify-center px-4 py-2 border border-transparent text-base font-medium text-white bg-blue-600 hover:bg-blue-700">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </div>

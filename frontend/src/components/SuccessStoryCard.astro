---
import RightArrowButton from "./RightArrowButton.astro";
const animalDescription = "Every dog that comes through the doors of the Mountainair Animal Shelter receives more individualized attention than at other, larger shelters. We do not euthanize at our shelter.";
const cardTitle = "Meet Sophie!";
const cardHeading = "Success Story";
---

<div class="flex mx-auto bg-teal-300 sm:max-w-fit rounded-2xl mt-20 border border-dashed border-blue-900 max-w-[90%] ">
  <div
    class="my-[-2rem] card w-[90%] ] bg-white mx-auto  max-w-md rounded-3xl shadow-xl transition-all duration-300 ease-in-out hover:shadow-2xl border-solid border-2 border-teal-300"
  >
  <!-- TODO: Refactor so that the entire card is not wrapped by the a tag / inline only not block for a tags. -->
    <a href="/dogs" class="flex-box">
      <div class="p-4">
        <p class="text-4xl font-bold px-4 text-blue-500">
          {cardHeading}
        </p>
        <p class="text-2xl font-bold py-2 px-4 text-blue-500">{cardTitle}</p>
        <img
          class="rounded-3xl max-h-60 w-full object-cover"
          src="/doggy.jpeg"
          alt="Sophie"
        />
        <div class="px-4 py-2">
          <p class=" prose prose-sm max-w-none">{animalDescription}</p>
        </div>
        <div class="flex items-center justify-center">
          <RightArrowButton path="/dogs" />
        </div>
      </div>
    </a>
  </div>
</div>


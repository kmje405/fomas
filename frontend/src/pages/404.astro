---
import Layout from "../layouts/BaseLayout.astro";
import Main from "../components/Main.astro";

const pageTitle = "404";
const pageHeading = "Ruh Roh!";
const pageDescription = "We can't seem to find the page you're looking for.";
const buttonLabel = "Go Home";
---


<!-- TODO: Add Yellow Squiggle according to the figma file. -->
<Layout pageTitle={pageTitle}>
  <Main>
    <div class="min-h-screen py-10">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-6xl font-bold text-blue-600 my-8">{pageHeading}</h1>
        <p class="text-xl text-gray-700 mb-8">{pageDescription}</p>
        <img
          src="/404V.png"
          alt="Page Not Found"
          class="rounded-xl mx-auto w-full max-w-md"
        />
        <p class="mt-8">
          <a
            href="/"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out"
          >
            {buttonLabel}
          </a>
        </p>
      </div>
    </div>
  </Main>
</Layout>

---
import Layout from "../layouts/BaseLayout.astro"
import Main from "../components/Main.astro"
import FullPageBanner from "../components/FullPageBanner.astro"
import Onebyone from "../components/Onebyone.astro"
import SucessStoryCard from "../components/SucessStoryCard.astro"
const pageTitle = "Get Involved"

---

<Layout pageTitle={pageTitle}>
        <FullPageBanner
            backgroundImage="./doggy.jpeg"
            headline="Get Involved"
            buttonText="Learn More"      
            buttonLink="/get-involved">
        </FullPageBanner>
        <Main>
            <Onebyone 
            title="Resources"
            description="Find a new forever friend today."
            image="/doggy.jpeg"
            buttonLink="/resources"
          />
          <Onebyone
          title="Volunteer"
          description="Find a new forever friend today."
          image="/doggy.jpeg"
          buttonLink="/get-involved"
          reverse={true}
        />
        <SucessStoryCard class="mt-5rem"/>
        </Main>
</Layout>
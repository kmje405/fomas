---
// JavaScript logic here
// You can define your data or import it from elsewhere
let author = "John Doe";
let publishDate = "February 6, 2024";
let description =
  "This is an example description that should be limited to three lines in display.";
let title = "Title of the article";
---

<div class="card mt-8 rounded-3xl bg-gray-200 shadow-3xl">
  <a href="/blog-post">
    <img class="rounded-t-lg" src="/bush.jpeg" alt="descriptive text" />
    <div class="p-4 ">
      <p class="publish-date text-transform: uppercase text-sm text-gray-500 italic">{publishDate}</p>
      <h2 class="title text-2xl font-semibold mb-2">{title}</h2>
      <p class="author text-lg text-gray-700 mb-4">{author}</p>
      <p class="description text-gray-600 truncate ...">{description}</p>
    </div>
  </a>
</div>

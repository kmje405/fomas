---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="bg-blue-600">
  <nav>
    <img src="images/FOMASlogo_h.wh.png" alt="the fomas logo">
    <div class="internal-links">
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/volunteer">Get Involved</HeaderLink>
      <HeaderLink href="/donate">Donate</HeaderLink>
      <HeaderLink href="/resources">Resources</HeaderLink>
      <HeaderLink href="/dogs">Dogs</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 2em;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    color: white;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom: 3px solid white;
  }
  .social-links,
  .social-links a {
    display: flex;
  }

  img {
    height: 3em;
  }
  )
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>

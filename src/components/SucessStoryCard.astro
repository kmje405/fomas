---
// JavaScript logic here
// You can define your data or import it from elsewhere
const animalDescription =
"Every dog that comes through the doors of the Mountainair Animal Shelter receives more individualized attention than at other, larger shelters. We do not euthanize at our shelter."
const cardTitle = "Meet Sophie!";
const cardHeading = "Success Story";
---

<div class="card w-1/3 min-h-fit mt-8 rounded-3xl shadow-2xl">
  <a href="/blog-post">
    <div class="p-4">
      <p class="px-4 text-4xl font-bold text-blue-600 text-bold">
        {cardHeading}
      </p>
      <p class="px-4 text-2xl font-bold py-2">{cardTitle}</p>
      <img class="rounded-3xl max-h-60 min-w-full object-cover" src="/sophie1.jpg" alt="descriptive text" />
      <div class="h-4">
        <img class="m-4 -translate-x-5" src="/line-twTeal300.png" alt="" />
      </div>
      <p class="text-sm py-2">{animalDescription}</p>
      <div class="flex justify-center">
        <button class="bg-blue-500 rounded-full py-2 px-4 font-bold text-white hover:bg-blue-800 transition duration-300 ease-in-out">
          Learn More!
        </button>
      </div>
    </div>
  </a>
</div>
